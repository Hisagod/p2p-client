<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aib.p2p">

    <application
        android:name="com.aib.P2pApplication"
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.aib.activity.SettingsActivity" />
        <activity android:name="com.aib.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.aib.activity.MainActivity"
            android:launchMode="singleTask" />
        <activity android:name="com.aib.activity.LoginActivity" />
        <activity
            android:name="com.aib.activity.RegistActivity"
            android:launchMode="singleTask" />
        <activity android:name="com.aib.activity.AboutActivity" />

        <activity android:name="com.aib.activity.UserInfoActivity" />
        <activity android:name="com.aib.activity.ChongZhiActivity" />
        <activity android:name="com.aib.activity.TiXianActivity" />
    </application>

</manifest>